<%# Chat index view %>
<div class="chat-container">
  <div class="chat-header">
    <h1>Chat with Gemini</h1>
    <%= link_to "Start New Chat", reset_chat_path, class: "new-chat-button", data: { turbo_method: :post } %>
  </div>

  <div class="conversation-container">
    <div class="conversation">
      <%= render_gemini_conversation(nil, include_timestamps: true) %>
    </div>
  </div>

  <div class="chat-form-container">
    <%= gemini_chat_form(
      placeholder: "Ask me anything...",
      submit_text: "Send",
      form_class: "chat-form",
      input_class: "chat-input",
      submit_class: "chat-submit"
    ) %>
  </div>
</div>

<% content_for :styles do %>
<style>
  .chat-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .new-chat-button {
    background: #6200ee;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
  }

  .conversation-container {
    height: 400px;
    overflow-y: auto;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 20px;
    padding: 16px;
    background: #f8f9fa;
  }

  .gemini-message {
    margin-bottom: 16px;
    padding: 12px;
    border-radius: 8px;
  }

  .gemini-user-message {
    background: #e3f2fd;
    margin-left: 20px;
  }

  .gemini-ai-message {
    background: #f1f3f4;
    margin-right: 20px;
  }

  .gemini-message-role {
    font-weight: bold;
    margin-bottom: 8px;
  }

  .gemini-message-timestamp {
    font-size: 0.8em;
    color: #666;
    margin-top: 8px;
    text-align: right;
  }

  .chat-form {
    display: flex;
    gap: 8px;
  }

  .chat-input {
    flex: 1;
    padding: 12px;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    font-family: inherit;
    resize: none;
    height: 80px;
  }

  .chat-submit {
    background: #6200ee;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    cursor: pointer;
    align-self: flex-end;
  }
</style>
<% end %>
